trait Named
func name(Named): String

trait Airborne
func wingspan(Airborne): Real

struct Bird extends Named, Airborne
  species: String
  weight: Real
  wingspan: Real
end

func name(bird: Bird): String = bird.species
func wingspan(bird: Bird): Real = bird.wingspan

struct Plane extends Named, Airborne
  model: String
  capacity: Int
  wingspan: Real
end

func name(plane: Plane): String = plane.model
func wingspan(plane: Plane): Real = plane.wingspan

func areEqual(a1: Airborne, a2: Airborne): Boolean = wingspan(a1) == wingspan(a2)
func areEqual(b1: Bird, b2: Bird): Boolean = b1.species == b2.species && b1.weight == b2.weight && b1.wingspan == b2.wingspan
func areEqual(p1: Plane, p2: Plane): Boolean = p1.model == p2.model && p1.capacity == p2.capacity && p1.wingspan == p2.wingspan

