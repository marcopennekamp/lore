trait Option[+A]
struct Some[open +A] extends Option[A] { value: A }
struct None extends Option[Nothing]

func toString(option: Option[A]): String where A
func toString(some: Some[A]): String where A = 'Some(${some.value})'
func toString(none: None): String = 'None'


trait AerialPhenomenon
struct Bird extends AerialPhenomenon
struct Plane extends AerialPhenomenon
struct Dragon extends AerialPhenomenon

func toString(some: Some[Bird]): String = 'It\'s just a bird.'
func toString(some: Some[Plane]): String = 'My gosh, the pollution up there!'
func toString(some: Some[Dragon]): String = 'Oh shit, it\'s a dragon!'
func toString(some: Some[[Dragon]]): String = 'They\'re everywhere!'


func test(): [String] = {
  let none = None()
  let string = Some('Hello, world!')
  let list = Some([1, 2, 3])
  let aerials = [Some(Bird()), Some(Plane()), Some(Dragon())]
  let dragons = Some { value = [Dragon(), Dragon(), Dragon()] }
  [toString(none), toString(string), toString(list), toString(aerials), toString(dragons)]
}
