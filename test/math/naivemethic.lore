func add(a: Int, b: Int): Int = {
  let mut result = a
  let mut remaining = b
  while (remaining > 0) {
    result += 1
    remaining -= 1
  }
  while (remaining < 0) {
    result -= 1
    remaining += 1
  }
  result
}

func mul(a: Int, b: Int): Int = {
  let mut remaining = a
  let isNegative = remaining < 0
  if (isNegative) remaining = -remaining
  let mut result = 0
  while (remaining > 0) {
    result = add(result, b)
    remaining = add(remaining, -1)
  }
  if (isNegative) result = -result
  result
}

func test(): Int = mul(12, 5)
