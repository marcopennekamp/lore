func add(a: Int, b: Int): Int = do
  let mut result = a
  let mut remaining = b

  while remaining > 0
    result += 1
    remaining -= 1
  end

  while remaining < 0
    result -= 1
    remaining += 1
  end

  result
end

func mul(a: Int, b: Int): Int = do
  let mut remaining = a
  let isNegative = remaining < 0

  if isNegative
    remaining = -remaining
  end

  let mut result = 0
  while remaining > 0
    result = add(result, b)
    remaining = add(remaining, -1)
  end

  if isNegative then -result else result
end

func test(): Int = mul(12, 5)
