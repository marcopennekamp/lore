trait Monster extends Combatant

struct Voidbringer extends Monster
  stats: Stats = Stats {
    health = 30,
    maximum_health = 30,
    regeneration = 2,
    dodge = 0.2,
    attack = 5,
    speed = 2
  }

  status_effects: StatusEffects = StatusEffects([])
end

func name(Voidbringer): String = 'Voidbringer'

act enter_combat(voidbringer: Voidbringer) do
  buff(voidbringer, create_armored(2, 3))
end
