  let dalinar = Shardbearer {
    name = 'Dalinar',
    stats = Stats {
      health = 30,
      maximumHealth = 30,
      regeneration = 0,
      dodge = 0.15,
      speed = 3
    },
    weapon = Shardblade()
  }

  (sadeas, dalinar)
