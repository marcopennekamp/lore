struct Thing
  mut counter: Int
end

func get(shape: %{ counter: Int }): Int = shape.counter

act increment(instance: Thing) do
  instance.counter += 1
end

func test(): [Int] = do
  let instance = Thing(0)
  let r1 = get(instance)
  increment(instance)
  let r2 = get(instance)
  increment(instance)
  increment(instance)
  let r3 = get(instance)
  [r1, r2, r3]
end
