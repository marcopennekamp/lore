module calculator

use lore.Enum.map
use lore.Option
use lore.test._

func parse_and_evaluate(term: String): Real = term |> Tokenizer.tokenize |> Option.get_or_else([]) |> Calculator.evaluate

func main(): [Real] = [
  '',
  '1 2 +',
  '1 2 -',
  '1 2 3 * +',
  '5 30 3 / /',
  '0 1 1 2 3 5 8 ++++++',
  '7 5 * 0 4 - 2 3 * - 9 + /',
] |> map(parse_and_evaluate)

@bench
spec '`main` parses and evaluates the example terms' do
  main() should_eq [0.0, 3.0, -1.0, 7.0, 0.5, 20, -35.0]
end
