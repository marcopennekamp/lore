trait Token

module Token do
  struct Operand extends Token
    value: Real
  end

  trait Operator extends Token
  module Operator do
    object Add extends Operator
    object Sub extends Operator
    object Mul extends Operator
    object Div extends Operator
  end
end

module lore.core do
  use Token._
  use Token.Operator._

  func to_string(operand: Operand): String = 'Operand(${operand.value})'
  func to_string(Add): String = 'Add'
  func to_string(Sub): String = 'Sub'
  func to_string(Mul): String = 'Mul'
  func to_string(Div): String = 'Div'
end
