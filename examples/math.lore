function min(a: Real, b: Real): Real = if (a < b) a else b
function min(a: Int, b: Int): Int = if (a < b) a else b
function max(a: Real, b: Real): Real = if (a > b) a else b
function max(a: Int, b: Int): Int = if (a > b) a else b
function add(a: Real, b: Real): Real = a + b

function mul(a: Int, b: Int): Int = {
  let mut remaining = a
  let isNegative = remaining < 0
  if (isNegative) remaining = -remaining
  let mut result = 0
  while (remaining > 0) {
    result += b
    remaining -= 1
  }
  if (isNegative) result = -result
  result
}
action testMul() {
  let result = mul(12, 5)
  println('Multiplication result: $result')
}

function double(list: [Real]): [Real] = {
  for (e <- list) {
    e * 2
  }
}
action testDouble() {
  let list = [1, 2, 3, 4]
  let result = double(list)
  println('Doubled list: $result')
}

function combinations(list: [Real]): [(Real, Real)] = {
  for (a <- list, b <- list) {
    (a, b)
  }
}
action testCombinations() {
  let list = [1, 2, 3, 4]
  let result = combinations(list)
  println('Combinations: $result')
}

action test() {
  testMul()
  testDouble()
  testCombinations()
}
