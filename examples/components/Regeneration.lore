
schema Regeneration {
  owner: +HealthState
  amount: Float
  interval: Int
  private mut counter: Int = 1 // private hides the field from any function defined outside the current file.
}

function tick(mut r: Regeneration): Unit = {
  if r.counter `mod` r.interval == 0 {
    // Any function that takes a value as its first argument can be called by using the dot notation.
    r.owner.HealthState.heal(amount)
  }
  r.counter += 1
}
